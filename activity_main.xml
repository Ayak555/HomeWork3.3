<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/edit_text_1"
        android:layout_width="163dp"
        android:layout_height="wrap_content"
        android:hint="First name"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="163dp" />

    <EditText
        android:id="@+id/edit_text_2"
        android:layout_width="163dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:hint="Second name"
        android:textSize="18sp"
        app:layout_constraintHorizontal_bias="0.104"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_text_1" />

    <EditText
        android:id="@+id/edit_text_3"
        android:layout_width="163dp"
        android:layout_height="45dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="20dp"
        android:hint="Third name"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_text_1" />


    <Button
        android:id="@+id/main_bottom_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="SHARE"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@id/edit_text_3"
        tools:layout_editor_absoluteX="50dp" />

    <Button
        android:id="@+id/main_bottom_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="50dp"
        android:text="SAVE"
        android:textSize="30sp"
        app:layout_constraintLeft_toRightOf="@+id/main_bottom_1"
        app:layout_constraintTop_toBottomOf="@id/edit_text_3" />


</androidx.constraintlayout.widget.ConstraintLayout>